<%= form_for @house do |form| %>
    <div class="form-group">
      <%= form.label :owner %>
      <%= form.text_field :owner, :class => "form-control #{'is-invalid' if @house.errors.key?(:owner)}" %>
      <div class="invalid-feedback">
        <% @house.errors[:owner].each do |e| %>
          <span><%= e.capitalize %></span><br>
        <% end %>
      </div>
    </div>
    <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, :class => "form-control #{'is-invalid' if @house.errors.key?(:location)}" %>
        <div class="invalid-feedback">
            <% @house.errors[:location].each do |e| %>
                <span><%= e.capitalize %></span><br>
            <% end %>
        </div>
    </div>
    <div class="form-group">
      <%= form.label :square_footage %>
      <%= form.number_field :square_footage, min: "0", step: "0.01", :class => "form-control #{'is-invalid' if @house.errors.key?(:square_footage)}" %>
      <div class="invalid-feedback">
        <% @house.errors[:square_footage].each do |e| %>
          <span><%= e.capitalize %></span><br>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :year_built %>
      <%= form.number_field :year_built, :class => "form-control #{'is-invalid' if @house.errors.key?(:year_built)}" %>
      <div class="invalid-feedback">
        <% @house.errors[:year_built].each do |e| %>
          <span><%= e.capitalize %></span><br>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :style %>
      <%= form.select :style,
          options_for_select(House.styles.map { |x| [x, x] }),
          {},
          :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :list_price %>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <%= form.number_field :list_price,
            :step => "0.01",
            :class => "form-control #{'is-invalid' if @house.errors.key?(:list_price)}" %>
        <div class="invalid-feedback">
          <% @house.errors[:list_price].each do |e| %>
            <span><%= e.capitalize %></span><br>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :num_floors %>
      <%= form.number_field :num_floors, :class => "form-control #{'is-invalid' if @house.errors.key?(:num_floors)}" %>
      <div class="invalid-feedback">
        <% @house.errors[:num_floors].each do |e| %>
          <span><%= e.capitalize %></span><br>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :basement %>
      <div class="form-check">
        <%= form.radio_button :basement, true, :class => "form-check-input #{'is-invalid' if @house.errors.key?(:basement)}" %>
        <%= form.label :basement, "Yes", :value => "true", :class => "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :basement, false, :class => "form-check-input #{'is-invalid' if @house.errors.key?(:basement)}" %>
        <%= form.label :basement, "No", :value => "false", :class => "form-check-label" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :photo %>
      <%= form.file_field :photo, accept: "image/png,image/gif,image/jpeg",
          :class => "form-control-file" %>
    </div>
    <div class="form-group">
        <%= form.submit "Submit", :class => "btn btn-primary" %>
    </div>
<% end %>