<%= form_for @real_estate_company do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name,
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:name)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:name].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :website %>
        <%= form.text_field :website,
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:website)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:website].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :address %>
        <%= form.text_area :address,
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:address)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:address].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :size %>
        <%= form.text_field :size, :type => "number",
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:size)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:size].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :founded %>
        <%= form.text_field :founded, :type => "number",
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:founded)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:founded].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :revenue %>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">$</div>
            </div>
            <%= form.text_field :revenue, :type => "number", :step => "0.01",
                :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:revenue)}" %>
            <div class="invalid-feedback">
                <%= @real_estate_company.errors[:revenue].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
            </div>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :synopsis %>
        <%= form.text_area :synopsis,
            :class => "form-control #{'is-invalid' if @real_estate_company.errors.key?(:synopsis)}" %>
        <div class="invalid-feedback">
            <%= @real_estate_company.errors[:synopsis].map { |e| "<span>#{e.capitalize}</span>" }.join("<br>").html_safe %>
        </div>
    </div>

    <div class="form-group">
        <%= form.submit "Submit", :class => "btn btn-primary" %>
    </div>
<% end %>