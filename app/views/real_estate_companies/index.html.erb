<div class="container">
    <table class="table table-hover table-striped table-bordered">
        <caption>List of companies</caption>
        <thead class="thead-dark">
            <tr>
                <th class="header">Name</th>
                <th class="header">Website</th>
                <th class="header">Address</th>
                <th class="header">Size</th>
                <th class="header">Founded</th>
                <th class="header">Revenue</th>
                <th class="header">Synopsis</th>
                <th class="header" colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @real_estate_companies.each do |c| %>
                <tr>
                    <td><%= c.name %></td>
                    <td>
                        <a href="<%= c.website %>" target="_blank"><%= c.website %></a>
                    </td>
                    <td><%= c.address %></td>
                    <td><%= c.size %></td>
                    <td><%= c.founded %></td>
                    <td>$<%= c.revenue %></td>
                    <td><pre><%= c.synopsis %></pre></td>
                    <td>
                        <%= button_to "View", real_estate_company_path(c), method: :get,
                            :class => "btn btn-primary" %>
                    </td>
                    <td>
                        <%= button_to "Edit", edit_real_estate_company_path(c),
                            method: :get,
                            :disabled => current_user.is_a?(Hunter),
                            :class => "btn btn-primary" %>
                    </td>
                    <td>
                        <%= button_to "Delete", c, method: :delete,
                            data: { confirm: "Are you sure?" },
                            :disabled => current_user.is_a?(Hunter),
                            :class => "btn btn-danger" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="col-md-12">
        <% unless hunter_signed_in? %>
            <%= button_to "Create", new_real_estate_company_path, method: :get,
                :class => "btn btn-primary" %>
        <% end %>
    </div>
</div>